<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WiseBites" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="AppName">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">45sp</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="AppName.50sp">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="skipButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="onboardingDescription">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="onboardingDescription.14sp">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="btn1" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="cornerRadius">10sp</item>
        <item name="iconTint">@color/primary</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconSize">13dp</item>
        <item name="strokeColor">@color/grey</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="backgroundTint">@color/white</item>
        <!--<item name="colorPrimary">@color/primary</item>-->
    </style>

    <style name="signInWelcomeBack">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">23dp</item>
    </style>

    <style name="signInText">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="signInEmail">
        <item name="android:color">@color/gray</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:background">@drawable/input_border</item>
        <item name="android:layout_margin">33dp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">14dp</item>
    </style>

    <style name="signInPassword">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:background">@drawable/input_border</item>
    </style>

    <style name="passwordHint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:color">@color/gray</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="signInForgetPassword">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="signInLoginBtn">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:paddingHorizontal">122dp</item>
    </style>

    <style name="signInDontHaveAccount">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="signInSignUp">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="signUp">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="signUp.hello">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="signUp.there">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="signUpCreateAccount">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">75dp</item>
    </style>

    <style name="signUpUsername">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/input_border</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:layout_marginVertical">18dp</item>
        <item name="android:layout_marginHorizontal">32dp</item>
    </style>

    <style name="signUpEmail">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:background">@drawable/input_border</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:layout_marginTop">18dp</item>
    </style>

    <style name="signUpPassword">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:background">@drawable/input_border</item>
    </style>

    <style name="signUpButton">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:paddingHorizontal">122dp</item>
    </style>

    <style name="signUpAlreadyHaveAccount">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/tertiary</item>
    </style>

    <style name="signUpSignIn">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="greetings">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="greetings.medium">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="greetings.medium.black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="homeHeading">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tertiary</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="homeSubHeading">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tertiary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="btn2">
        <item name="cornerRadius">10sp</item>
        <item name="iconTint">@color/primary</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconSize">8dp</item>
        <item name="strokeColor">@color/grey</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">8sp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="radioBtn">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Theme.WiseBites" parent="Base.Theme.WiseBites" />
</resources>