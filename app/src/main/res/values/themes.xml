<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WiseBites" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="AppName">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">45sp</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="AppName.50sp">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="skipButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="onboardingDescription">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="onboardingDescription.14sp">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="btn1" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="cornerRadius">10sp</item>
        <item name="iconTint">@color/primary</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconSize">13dp</item>
        <item name="strokeColor">@color/grey</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="backgroundTint">@color/white</item>
        <!--<item name="colorPrimary">@color/primary</item>-->
    </style>

    <style name="welcomeBack">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">23dp</item>
    </style>

    <style name="signIn">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="email">
        <item name="android:color">@color/gray</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:background">@drawable/input_border</item>
        <item name="android:layout_margin">33dp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">14dp</item>
    </style>

    <style name="password">
        <item name="android:color">@color/gray</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:background">@drawable/input_border</item>
    </style>

    <style name="loginBtn">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="dontHaveAccount">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="signUp">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="forgetPassword">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="greetings">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="greetings.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="greetings.medium">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="greetings.medium.black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="homeHeading">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="homeHeading.white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="homeSubHeading">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="btn2">
        <item name="cornerRadius">10sp</item>
        <item name="iconTint">@color/primary</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconSize">8dp</item>
        <item name="strokeColor">@color/grey</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">8sp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="radioBtn">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="tabs">
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabMode"> scrollable</item>
        <item name="tabRippleColor">@color/primary</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.WiseBites" parent="Base.Theme.WiseBites" />
</resources>