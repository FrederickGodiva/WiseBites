<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoarding3">

    <ImageView
        android:id="@+id/iv_bento"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:contentDescription="@string/bento_illustration"
        android:src="@mipmap/bento_foreground"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/onBoarding4_title"
        android:layout_marginTop="20dp"
        android:textSize="23sp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:textAlignment="center"
        app:flow_verticalAlign="center"
        app:layout_constraintTop_toBottomOf="@id/iv_bento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/white"
        android:text="@string/signUpWithEmail"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_light"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:translationZ="5dp"
        app:icon="@drawable/ic_email"
        app:iconTint="@color/black"
        app:iconGravity="textStart"
        app:cornerRadius="20dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/orUse"
        android:textSize="13sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/btn_signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_google"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/white"
        android:text="@string/signUpWithGoogle"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_light"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:translationZ="5dp"
        app:icon="@drawable/ic_google"
        app:iconGravity="textStart"
        app:iconTintMode="multiply"
        app:cornerRadius="20dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_or"/>

    <LinearLayout
        android:id="@+id/ll_already_have_an_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_google"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_already_have_an_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alreadyHaveAnAcc"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_medium"/>

        <TextView
            android:id="@+id/tv_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signIn"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/primary"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>